mixin hero-face-container(src, srcSet, name, index)
  img(
    src=src,
    sizes="(max-width: 991px) 100vw, (max-width: 1279px) 94vw, (max-width: 1439px) 1198px, 1358px"
    srcset=srcSet
    alt='face teacher ' + name
    class='memorisers-face ' + name + ' memorisers-face_' + index
  )


mixin section-text-heroes

  .container.w-container
    .section.center-align.top-header
      +line-dotted

      .w-layout-grid.hero-columns
        div
          h1.wow.fadeInUp.
            Learn UX/UI online with live micro classes
          .large-text.wow.fadeInUp.
            Memorisely is an online immersive UX/UI Bootcamp. Join 10 designers around the world
            and learn the skills of a UX/UI designer during live classes.
          .break
          a.fill.large.mobile-full.w-inline-block.wow.fadeInUp(href="#modalInDev", data-toggle="modal")
            div View Bootcamps
