mixin sticky-navigation-link(link)
  a.in-page-link.w-inline-block.wow.fadeInUp(href=link.url)= link.title


mixin sticky-navigation(navigationLinks, navigationTitle)

  .bootcamp-navigation.wow.fadeInUp
    .footer-header
      .capitals.wow.fadeInUp= navigationTitle

    each link in navigationLinks.links
      +sticky-navigation-link(link)

