mixin product-start-plan(productIndex)

  include product-start-plan.data.pug
  - var productPlans = plans[productIndex]

  +section-row-test-small(productInfo)
  .blog-break

  .tabs-6.w-tabs(data-duration-in="300", data-duration-out="100")
