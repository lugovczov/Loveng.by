mixin section-title-half-img-text(data)

  .title.wow.fadeInUp(id=data.id)= data.title
  h4.wow.fadeInUp= data.subtitle

  .teacher-block
    .w-layout-grid.teacher-grid
      .teacher-image.wow.fadeInUp
      div
        .large-text.wow.fadeInUp
          strong.bold-text-4= data.author
        .small-text.wow.fadeInUp= data.authorRole
        .small-break
        .regular-text= data.description
        br
        br
        a.outline.w-inline-block.wow.fadeInUp(href="#modalContactForm", data-toggle="modal")= data.btn
        .small-break
