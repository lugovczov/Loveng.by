mixin nav-cards-item(card)

    a.nav-card.w-inline-block.wow.fadeInUp(href=card.link)
      .bootcamp-card-image.nav-bootcamp(class=card.className)
      .card-body
        h6= card.title
        .small-text= card.description

        .small-break
        if card.btnWithImg
          div(class=card.btnClass)
            img(
              src=card.btnSrc,
              loading="lazy",
              alt='logo ' + card.title,
              class=card.btnImgClass
              )
            div= card.btnText
        else
          .text-link= card.btnText


mixin nav-cards(cards)

  .w-layout-grid.three-column-nav.quad
    each card in cards
      +nav-cards-item(card)
